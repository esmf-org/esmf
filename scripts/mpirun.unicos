#!/bin/ksh
# $Id: mpirun.unicos,v 1.5 2007/03/14 17:11:35 theurich Exp $
# This script provides an interface such that the simple command
# mpirun -np # runs # copies of the program in parallel.

if [ "$1" != "-np" ] 
then
        echo "Usage: mpirun -np #"
        exit 1
fi

num_procs=$2
shift 2
prog=$*

aprun $ESMF_MPIRUNOPTIONS -n $num_procs $prog


