  call ESMF_FieldBundleDestroy(bundle,rc=status)
  VERIFY_(STATUS)
  call ESMF_FieldDestroy(field,rc=status)
  VERIFY_(STATUS)

  RETURN_(ESMF_SUCCESS)
  end subroutine MAPL_ArrayReadNCpar_2d

